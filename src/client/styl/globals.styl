*
  box-size border-box
  padding 0
  margin 0
  font-size 16px
  font-family "Verdana", sans-serif
  input, button
    &:focus, &:active
      outline none
  
.center-text
	text-align center
 
a
  color black 
	
.flex
  display flex
  &.space-around
    justify-content space-around
  &.vertical-center
    align-items center
  &.content-right
    justify-content flex-end
  &.space-between
  	justify-content space-between
  &.direction-row
    flex-direction column 
  	
.display-panel
	height 400px

.addTournamentTitle
  width 100%
  border 0px
  color black
  outline none
  

